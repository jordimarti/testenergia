<div class="container">
<div class="row">
			<div class="col-md-12">
				<h2 class="page-title">Iniciar sessió com a expert en Test Energia</h2>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4 col-md-offset-4">

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div class="form-group"><%= f.label :email, "Correu electrònic" %><br />
			  <%= f.email_field :email, :autofocus => true, :class => 'form-control' %></div>

			  <div class="form-group"><%= f.label :password, "Contrasenya" %><br />
			  <%= f.password_field :password, :class => 'form-control'  %></div>

			  <% if devise_mapping.rememberable? -%>
			    <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me, "Recordar les dades" %></div>
			  <% end -%>

			  <div><%= f.submit "Inicieu sessió", :class => "btn button-default" %></div>
			<% end %>

			</div>
		</div>
		<div class="row">
			<div class="col-md-4 col-md-offset-4 other-options">
			
			

			</div>
		</div>
</div>