<div class="container">
<div class="row">
  <div class="col-md-12">
    <%= link_to :action => 'index' do %>
      <div class="btn button-page-menu"><span class="glyphicon glyphicon-arrow-left"> </span> Tornar a la llista de projectes</div>
    <% end %>
    <h2 class="page-title">Eliminar projecte</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12 principal-content">
	  <%= form_for(:xproject, :url => {:action => 'destroy', :id => @xproject.id}) do |f| %>

	    <p>Esteu segurs de voler eliminar aquest projecte?</p>

	    <p class="reference-name"><%= @xproject.name %></p>

	    <div class="form-buttons">
	      <div><%= f.submit "Eliminar projecte", :class => "btn button-alert" %></div>
	    </div>

	  <% end %>
	</div>
</div>
</div>